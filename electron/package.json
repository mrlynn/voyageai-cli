{
  "name": "voyage-ai-playground",
  "version": "1.0.0",
  "description": "Voyage AI Playground â€” Desktop app for exploring embeddings, reranking, and vector search",
  "main": "main.js",
  "author": "Michael Lynn",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.voyageai.playground",
    "productName": "Voyage AI Playground",
    "directories": {
      "output": "../dist-electron"
    },
    "files": [
      "main.js",
      "../src/**/*",
      "../node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] }
      ],
      "icon": "icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons"
    },
    "dmg": {
      "title": "Voyage AI Playground",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
