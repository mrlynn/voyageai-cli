{
  "name": "vai-workflow-collection-overlap-audit",
  "version": "1.0.0",
  "description": "Compare two collections to find semantic duplicates. Samples documents from the source collection and searches for near-matches in the target.",
  "keywords": [
    "vai-workflow",
    "analysis",
    "dedup",
    "overlap",
    "audit",
    "multi-collection"
  ],
  "author": "Michael Lynn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrlynn/voyageai-cli.git",
    "directory": "packages/vai-workflow-collection-overlap-audit"
  },
  "files": [
    "workflow.json",
    "README.md",
    "LICENSE"
  ],
  "vai-workflow": {
    "engine": ">=1.0.0",
    "category": "analysis",
    "tags": [
      "dedup",
      "overlap",
      "audit",
      "multi-collection"
    ],
    "tools": [
      "search",
      "query",
      "filter",
      "generate"
    ],
    "inputs": {
      "source_collection": {
        "type": "string",
        "required": true
      },
      "target_collection": {
        "type": "string",
        "required": true
      },
      "sample_query": {
        "type": "string",
        "default": "general content"
      },
      "sample_size": {
        "type": "number",
        "default": 10
      },
      "similarity_threshold": {
        "type": "number",
        "default": 0.85
      }
    }
  }
}
