{
  "name": "vai-workflow-meeting-action-items",
  "version": "1.0.0",
  "description": "Ingest meeting notes into the knowledge base and extract structured action items with owners, deadlines, and context from prior meetings.",
  "keywords": [
    "vai-workflow",
    "domain-specific",
    "meetings",
    "action-items",
    "extraction",
    "productivity"
  ],
  "author": "Michael Lynn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrlynn/voyageai-cli.git",
    "directory": "packages/vai-workflow-meeting-action-items"
  },
  "files": [
    "workflow.json",
    "README.md",
    "LICENSE"
  ],
  "vai-workflow": {
    "engine": ">=1.0.0",
    "category": "domain-specific",
    "tags": [
      "meetings",
      "action-items",
      "extraction",
      "productivity"
    ],
    "tools": [
      "ingest",
      "query",
      "generate"
    ],
    "inputs": {
      "notes": {
        "type": "string",
        "required": true
      },
      "collection": {
        "type": "string",
        "required": true
      },
      "meeting_topic": {
        "type": "string",
        "required": true
      },
      "date": {
        "type": "string",
        "default": "today"
      }
    }
  }
}
