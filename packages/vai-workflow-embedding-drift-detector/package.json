{
  "name": "vai-workflow-embedding-drift-detector",
  "version": "1.0.0",
  "description": "Re-embed a sample of documents and compare against stored embeddings to detect drift from model changes or configuration issues.",
  "keywords": [
    "vai-workflow",
    "analysis",
    "drift",
    "monitoring",
    "maintenance",
    "quality"
  ],
  "author": "Michael Lynn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrlynn/voyageai-cli.git",
    "directory": "packages/vai-workflow-embedding-drift-detector"
  },
  "files": [
    "workflow.json",
    "README.md",
    "LICENSE"
  ],
  "vai-workflow": {
    "engine": ">=1.0.0",
    "category": "analysis",
    "tags": [
      "drift",
      "monitoring",
      "maintenance",
      "quality"
    ],
    "tools": [
      "search",
      "embed",
      "similarity",
      "generate"
    ],
    "inputs": {
      "collection": {
        "type": "string",
        "required": true
      },
      "sample_query": {
        "type": "string",
        "default": "general knowledge"
      },
      "model": {
        "type": "string",
        "default": "voyage-4-large"
      },
      "sample_size": {
        "type": "number",
        "default": 10
      }
    }
  }
}
