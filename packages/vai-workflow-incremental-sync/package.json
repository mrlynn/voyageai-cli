{
  "name": "vai-workflow-incremental-sync",
  "version": "1.0.0",
  "description": "Smart incremental ingestion that compares incoming documents against the existing collection using semantic similarity, with three-tier decision logic: skip duplicates, flag revisions, ingest new content.",
  "keywords": [
    "vai-workflow",
    "ingestion",
    "sync",
    "dedup",
    "incremental",
    "smart-ingest"
  ],
  "author": "Michael Lynn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrlynn/voyageai-cli.git",
    "directory": "packages/vai-workflow-incremental-sync"
  },
  "files": [
    "workflow.json",
    "README.md",
    "LICENSE"
  ],
  "vai-workflow": {
    "engine": ">=1.0.0",
    "category": "ingestion",
    "tags": [
      "sync",
      "dedup",
      "incremental",
      "smart-ingest"
    ],
    "tools": [
      "search",
      "similarity",
      "filter",
      "ingest",
      "generate"
    ],
    "inputs": {
      "document": {
        "type": "string",
        "required": true
      },
      "collection": {
        "type": "string",
        "required": true
      },
      "duplicate_threshold": {
        "type": "number",
        "default": 0.95
      },
      "revision_threshold": {
        "type": "number",
        "default": 0.7
      }
    }
  }
}
